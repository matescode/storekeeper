<Window x:Class="StoreKeeper.ConnectionTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection String Tester" Height="260" Width="400"
        MaxHeight="260" MinHeight="260"
        MaxWidth="400" MinWidth="400"
        >
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Connection String" Margin="5" />
            <TextBox Name="ConnectionStringTextBox" Height="140" TextWrapping="WrapWithOverflow" />
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Height="35" Content="Test" Margin="5" Click="TestButton_Click" />
                <Button Width="100" Height="35" Content="TestLock" Margin="5" Click="TestLockButton_Click" />
                <Button Width="100" Height="35" Content="ClearLock" Margin="5" Click="ClearLockButton_Click" />
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
</Window>
