<UserControl x:Class="StoreKeeper.App.Controls.TodayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:CommonBase.UI.Localization;assembly=CommonBase.UI"
             >
    <Grid DataContext="{Binding TodayStatusModel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{loc:Translate TodayStatus}" Margin="0,0,5,0" />
            <TextBlock Text=":" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding TodayString}" />
        </StackPanel>
    </Grid>
</UserControl>
