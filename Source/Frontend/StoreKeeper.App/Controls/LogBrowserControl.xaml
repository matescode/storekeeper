<UserControl x:Class="StoreKeeper.App.Controls.LogBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto"
             Width="Auto"
             Background="White">
    <Grid>
        <RichTextBox HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                     x:Name="LogTextBox"
                     >
            <FlowDocument>
                <Paragraph x:Name="mainParagraph" />
            </FlowDocument>
        </RichTextBox>
    </Grid>
</UserControl>
