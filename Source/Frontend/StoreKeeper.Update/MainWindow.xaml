<Window x:Class="StoreKeeper.Update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StoreKeeper.Update" 
        Height="250" Width="525"
        MinHeight="250" MinWidth="525"
        MaxHeight="250" MaxWidth="525"
        >
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Margin="5" Text="Soubor:" />
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox Name="FileName" Width="420" />
                <Button Content="..." Width="40" Margin="10, 0, 0, 0" Name="OpenFileButton" Click="OpenFileButton_OnClick" />
            </StackPanel>
            <TextBlock Margin="5" Text="Connection String:" />
            <TextBox Name="ConnectionStringTextBox" Height="60" TextWrapping="WrapWithOverflow" Margin="5" />
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="Test" Width="100" Name="TestButton" Click="TestButton_OnClick" />
                <Button Content="Update" Width="100" Name="UpdateButton" Margin="10,0,0,0" Click="UpdateButton_OnClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
