<Window x:Class="CommonBase.UI.Windows.BusyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400"
        Height="150"
        Title="Busy Window"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="White"
        Closing="BusyWindow_OnClosing"
        >
    <Grid>
        <StackPanel>
            <Label Name="OperationLabel" Content="Progress ..." Margin="10" />
            <ProgressBar Height="25" Margin="10" IsIndeterminate="True" />
        </StackPanel>
    </Grid>
</Window>
